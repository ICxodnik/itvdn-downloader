<Window x:Name="main" x:Class="itvdnDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:itvdnDownloader"
        mc:Ignorable="d"
        Title="ITVDN Downloader" Height="650" Width="500" MinWidth="400" MinHeight="400" Loaded="main_Loaded" >
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0,4,0,10" />
        </Style>
        <Style x:Key="LessonItemNumber" TargetType="{x:Type Label}">
            <Setter Property="Background" Value="#f65e08" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="LessonItemTitle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="20, 0, 0, 0" />
        </Style>
        <Style x:Key="LessonItemLink" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="9" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Foreground" Value="#a1a1a1" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
        <DataTemplate x:Key="LessonsItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1" />
                </Grid.ColumnDefinitions>
                <Label Content="0" Style="{StaticResource LessonItemNumber}" Grid.Row="0" Grid.RowSpan="2"  Grid.Column="0" />
                <TextBlock Text="{Binding Title}" Style="{StaticResource LessonItemTitle}" Grid.Row="0" Grid.Column="1" />
                <TextBlock Text="{Binding Url}" Style="{StaticResource LessonItemLink}" Grid.Row="1" Grid.Column="1" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="20, 0, 20, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="90" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>


        <StackPanel Orientation="Vertical" Grid.Row="0">

            <Label x:Name="lbOut" Content="Интернет-ресурс" HorizontalAlignment="Stretch" />
            <TextBox x:Name="tbUrlOut" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding DataVideoPageUrl}" />
            <Button x:Name="btVideoList" Content="Загрузить список видео" HorizontalAlignment="Stretch" Click="btVideoList_Click" />
        </StackPanel>

        <ListView x:Name="lbListVideo" HorizontalAlignment="Stretch" Grid.Row="1" HorizontalContentAlignment="Stretch"
                 ItemsSource="{Binding Lessons}" 
                 ItemTemplate="{DynamicResource LessonsItemTemplate}" />

        <StackPanel Orientation="Vertical" Grid.Row="2">
            <Label x:Name="lbLoc" Content="Локальный-ресурс" HorizontalAlignment="Stretch" />
            <TextBox x:Name="tbUrlLoc" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding DataVideoLocFolder}" />
            <Button x:Name="btChoose" Content="Выбрать" HorizontalAlignment="Stretch" Click="btChoose_Click" />
        </StackPanel>

        <Button x:Name="btDownload" Content="Скачать" HorizontalAlignment="Stretch" Grid.Row="3" Click="btDownload_Click" />

    </Grid>
</Window>
